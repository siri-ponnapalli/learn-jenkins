pipeline {
    agent {
        label 'AGENT-1'
    }
    stages {
        stage('Build') {
            steps {
                script{
                    echo "This is build"
                }
                
            }
        }
        stage('Test') {
            steps {
                script{
                    echo "This is Test"
                }
                
            }
        }
        stage('Deploy') {
            steps {
                script{
                    echo "This is deploy"
                    //error 'pipeline failed'
                }
                
            }
        }
    }
    post{
        always{
            echo "This section runs always"
        }
        success{
            echo "This section run when pipiline success"
        }
        //failure{
           // echo "This section run when pipiline fail"
       // }
    }
}