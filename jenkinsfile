pipeline {
    agent {
        label 'AGENT-1'
    }
    options{
        timeout(time: 30, unit: 'SECONDS')
        disableConcurrentBuilds()
        retry(1)
    }    
    stages {
        stage('Build') {
            steps {
                script{
                   sh  'echo This is build'
                   //sh  'sleep 30'
                }
                
            }
        }
        stage('Test') {
            steps {
                script{
                    echo "This is Test"
                }
                
            }
        }
        stage('Deploy') {
            steps {
                script{
                    echo "This is deploy"
                    error 'pipeline failed'
                }
                
            }
        }
    }
    post{
        always{
            echo "This section runs always"
            deleteDir()
        }
        success{
            echo "This section run when pipiline success"
        }
        failure{
            echo "This section run when pipiline fail"
        }
    }
}